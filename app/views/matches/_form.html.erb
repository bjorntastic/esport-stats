<%= form_for @match do |f| %>
	
<table class='form'>
	<tr>
		<th><%= f.label :start_time %></th>
		<td><%= f.date_select :start_time %></td>
	</tr>

	<tr>
		<th><%= f.label :winner_id, "Winner" %></th>
		<td><%= f.select :winner_id, @teams.map { |t| [t.name, t.id] } %></td>
	</tr>

	<tr>
		<th><%= f.label :loser_id, "Loser" %></th>
		<td><%= f.select :loser_id, @teams.map { |t| [t.name, t.id] } %></td>
	</tr>

	<tr>
		<th><%= f.label :match_length %></th>
		<td><%= f.number_field :match_length %></th>
	</tr>

	<tr>
		<td><%= f.submit 'Create Match' %></td>
	</tr>
</table>

<% end %>