<%= form_for @league do |f| %>

	<table class='form'>

		<tr>
			<th><%= f.label :name %></th>
			<td><%= f.text_field :name %></td>
		</tr>

		<tr>
			<th><%= f.label :game_name%></th>
			<td><%= f.select :game_name, ["LoL", "DotA2", "CS", "HotS", "Smite"] %></td>
		</tr>

		<tr>
			<th><%= f.label :start_date %></th>
			<td><%= f.date_select :start_date %></td>
		</tr>

		<tr>
			<th><%= f.label :end_date %></td>
			<td><%= f.date_select :end_date %></td>
		</tr>

		<tr>
			<th><%= f.label :format %></th>
			<td><%= f.select :format, ["Normal"] %></td>
		</tr>

		<tr>
			<td><%= f.submit %></td>
		</tr>

	</table>

<% end %>