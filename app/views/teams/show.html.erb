<h1><%= @team %></h1>

<p><%= link_to 'Back', :back %></p>
<p><%= link_to 'Edit', edit_team_path(@team) %></p>
<p><%= link_to 'Delete', @team, :method => 'delete' %></p>

<h3><%= @team.league %> roster:</h3>

<table>
	<tr>
		<th>Name</th>
		<th>Kills</th>
		<th>Deaths</th>
		<th>Assists</th>
		<th>Minions</th>
		<th>Gold</th>
	</tr>

	<% @team.players.each do |p| %>
		
		<tr>
			<td><%= p.name %></td>
			<td><%= p.kills %></td>
			<td><%= p.deaths %></td>
			<td><%= p.assists %></td>
			<td><%= p.minions %></td>
			<td><%= p.total_gold %></td>
		</tr>

	<% end %>

</table>